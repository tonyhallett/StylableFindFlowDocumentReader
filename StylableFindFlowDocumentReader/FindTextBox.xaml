<UserControl x:Name="ftb"
  x:Class="StylableFindFlowDocumentReader.FindTextBox"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:StylableFindFlowDocumentReader"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Grid
    VerticalAlignment="Center"
    Background="{Binding ElementName=ftb, Path=Background}">
    <Grid.Resources>
      <local:HintTextVisibilityConverter
        x:Key="HintTextVisibilityConverter" />
      <local:DifferenceConverter
        x:Key="DifferenceConverter" />
    </Grid.Resources>
    <TextBox x:Name="findTextBox"
      Width="{Binding ElementName=ftb, Path=TextBoxWidth}"
      Margin="0"
      Padding="0"
      HorizontalAlignment="Left"
      VerticalAlignment="Center"
      Background="{Binding ElementName=ftb, Path=Background}"
      Foreground="{Binding ElementName=ftb, Path=Foreground}"
      AllowDrop="True"
      BorderThickness="0"
      Text="{Binding FindText, UpdateSourceTrigger=PropertyChanged}"
      ToolTip="{Binding ElementName=findTextBox, Path=ToolTip}"
      ToolTipService.IsEnabled="{Binding ElementName=ftb, Path=ShowTooltip}"
      ToolTipService.ShowOnDisabled="true" />

    <!--  Label acts as placeholder  -->
    <Label
      Width="{Binding ElementName=ftb, Path=TextBoxWidth, Converter={StaticResource DifferenceConverter}, ConverterParameter=3}"
      Margin="3,0,0,0"
      Padding="0,0,0,0"
      HorizontalAlignment="Left"
      VerticalAlignment="Center"
      Foreground="{Binding ElementName=ftb, Path=Foreground}"
      Content="{Binding ElementName=ftb, Path=HintText}"
      FontStyle="{Binding ElementName=ftb, Path=LabelFontStyle}"
      IsHitTestVisible="False"
      Opacity="{Binding ElementName=ftb, Path=LabelOpacity}"
      Visibility="{Binding FindText, Converter={StaticResource ResourceKey=HintTextVisibilityConverter}}" />
  </Grid>
</UserControl>
