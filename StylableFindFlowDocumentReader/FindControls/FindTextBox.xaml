<UserControl x:Name="ftb"
  x:Class="StylableFindFlowDocumentReader.FindControls.FindTextBox"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:StylableFindFlowDocumentReader.FindControls"
  xmlns:converters="clr-namespace:StylableFindFlowDocumentReader.Converters"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Grid
    VerticalAlignment="Center">
    <Grid.Resources>
      <converters:HintTextVisibilityConverter
        x:Key="HintTextVisibilityConverter" />
      <converters:DifferenceConverter
        x:Key="DifferenceConverter" />
    </Grid.Resources>
    <TextBox x:Name="findTextBox"
      Width="{Binding ElementName=ftb, Path=TextBoxWidth}"
      Margin="0"
      Padding="0"
      HorizontalAlignment="Left"
      VerticalAlignment="Center"
      Background="{Binding ElementName=ftb, Path=Background}"
      Foreground="{Binding ElementName=ftb, Path=Foreground}"
      AllowDrop="True"
      BorderThickness="0"
      SelectionBrush="{Binding ElementName=ftb, Path=SelectionBrush}"
      SelectionOpacity="{Binding ElementName=ftb, Path=SelectionOpacity}"
      Text="{Binding FindText, UpdateSourceTrigger=PropertyChanged}"
      ToolTip="{Binding ElementName=ftb, Path=Tooltip}"
      ToolTipService.IsEnabled="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:FindTextBox}}, Path=ShowTooltip}"
      ToolTipService.ShowOnDisabled="true" />

    <!--  Label acts as placeholder  -->
    <Label
      Width="{Binding ElementName=ftb, Path=TextBoxWidth, Converter={StaticResource DifferenceConverter}, ConverterParameter=3}"
      Margin="3,0,0,0"
      Padding="0,0,0,0"
      HorizontalAlignment="Left"
      VerticalAlignment="Center"
      Background="{Binding ElementName=ftb, Path=Background}"
      Foreground="{Binding ElementName=ftb, Path=Foreground}"
      Content="{Binding ElementName=ftb, Path=HintText}"
      FontStyle="{Binding ElementName=ftb, Path=HintFontStyle}"
      IsHitTestVisible="False"
      Opacity="{Binding ElementName=ftb, Path=HintOpacity}"
      Visibility="{Binding FindText, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ResourceKey=HintTextVisibilityConverter}}" />
  </Grid>
</UserControl>
