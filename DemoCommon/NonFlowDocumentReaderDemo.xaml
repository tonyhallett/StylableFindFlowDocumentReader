<UserControl x:Class="DemoCommon.NonFlowDocumentReaderDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DemoCommon"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel x:Name="DockPanel"
    LastChildFill="True">
        <local:DocumentNullSwitcher DockPanel.Dock="Top" FlowControl="{Binding RelativeSource={RelativeSource AncestorType=local:NonFlowDocumentReaderDemo}, Path=FlowControl}"/>
        <ContentPresenter Content="{Binding RelativeSource={RelativeSource AncestorType=local:NonFlowDocumentReaderDemo}, Path=FlowControl}"/>
    </DockPanel>
</UserControl>
