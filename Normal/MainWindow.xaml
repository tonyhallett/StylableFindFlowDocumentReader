<Window
  x:Class="Normal.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:Normal"
  Title="Normal FlowDocumentReader Demo"
  Width="800"
  Height="450"
  WindowStartupLocation="CenterScreen"
  Background="DarkBlue"
  Foreground="LightBlue"
  mc:Ignorable="d">
  <FlowDocumentReader
    BorderBrush="LightBlue"
    BorderThickness="1"
    SelectionBrush="LightBlue">
    <FlowDocumentReader.Document>
      <FlowDocument>
        <Paragraph>
          <Run
            Text="This is a simple example of a FlowDocumentReader without a stylable Find area." />
        </Paragraph>
      </FlowDocument>
    </FlowDocumentReader.Document>
  </FlowDocumentReader>
</Window>
