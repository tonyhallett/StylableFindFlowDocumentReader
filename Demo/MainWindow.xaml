<Window
  x:Class="Demo.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:Demo"
  xmlns:sys="clr-namespace:StylableFindFlowDocumentReader;assembly=StylableFindFlowDocumentReader"
  Title="MainWindow"
  Width="800"
  Height="450"
  mc:Ignorable="d">
  <Grid>
    <sys:FindRestylingFlowDocumentReader>
      <sys:FindRestylingFlowDocumentReader.Document>
        <FlowDocument>
          <Paragraph>
            <Run
              Text="This is a simple example of a FlowDocumentReader with a stylable Find area." />
          </Paragraph>
        </FlowDocument>
      </sys:FindRestylingFlowDocumentReader.Document>
      <sys:FindRestylingFlowDocumentReader.FindToolbarContent>
        <Border
          Margin="5,1,0,1"
          Padding="0"
          BorderBrush="Pink"
          BorderThickness="5"
          SnapsToDevicePixels="true">
          <StackPanel
            Background="LightGray"
            Orientation="Horizontal">
            <sys:FindTextBox
              Foreground="Black"
              HintText="Do it" />
            <sys:FindNextPreviousButtons
              Foreground="Blue" />
            <sys:FindMenu
              DropDownGlyphBrush="Lime"
              DropDownGlyphDisabledBrush="Gray"
              DropDownStateBackground="Red"
              DropDownStateBorder="Yellow"
              MenuBackground="Black"
              MenuBorder="Lime"
              MenuItemBackground="DeepPink"
              MenuItemBorderBrush="White"
              MenuItemForeground="White"
              MenuItemHoverBackground="Orange"
              MenuItemHoverBorderBrush="Black"
              MenuItemHoverForeground="Black"
              SelectedGlyphBackground="DeepPink"
              SelectedGlyphBorder="White"
              SelectedGlyphBrush="White" />
          </StackPanel>
        </Border>
      </sys:FindRestylingFlowDocumentReader.FindToolbarContent>
    </sys:FindRestylingFlowDocumentReader>
  </Grid>
</Window>
